{
    "compilerOptions": {
      "outDir": "./dist/",
      "noImplicitAny": true,
      "module": "ESNext",
      "target": "es5",
      "jsx": "react-jsx",
      "allowJs": true,
      "moduleResolution": "node",
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "baseUrl": ".",  // для абсолютного импорта
      "paths": {      
        "*": ["./src/*"]
      }
    },
    "ts-node": {
        "compilerOptions": {
          "module": "CommonJS"
        }
      }
  }